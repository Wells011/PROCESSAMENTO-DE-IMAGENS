                                <canvas class="imgExibir" id="resultadoUnico">
                                </canvas>
                        </div>
                        <a id="download" download="img_processamentos_iniciais.png">
                                <button class="btn btn-success ml-2 mt-1 btn-sm" type="button"
                                        onClick="downloadImg()">Download</button>
                        </a>
